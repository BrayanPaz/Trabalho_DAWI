<!DOCTYPE html>
<html lang="pt-br" data-bs-theme="dark">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Alunos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary border-bottom">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/"><i class="bi bi-barbell"></i> GymManager</a>
        </div>
    </nav>
    <main class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h2">Lista de Alunos</h1>
            <a href="/Aluno" class="btn btn-warning"><i class="bi bi-plus-circle-fill me-1"></i> Cadastrar Novo</a>
        </div>

        <form method="post" class="mb-4">
            <div class="input-group">
                <input type="text" name="filtro" id="filtro" class="form-control" placeholder="Pesquisar por nome...">
                <button class="btn btn-outline-secondary" type="submit"><i class="bi bi-search"></i> Filtrar</button>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-dark table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">Matrícula</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Nascimento</th>
                        <th scope="col" class="text-end">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% Aluno.forEach(function(Aluno){ %>
                        <tr>
                            <td>
                                <%= Aluno._id %>
                            </td>
                            <td>
                                <%= Aluno.Nome %>
                            </td>
                            <td>
                                <%= Aluno.Nascimento %>
                            </td>
                            <td class="text-end">
                                <a href="/edtAluno/<%= Aluno._id %>" class="btn btn-sm btn-outline-warning me-2"><i
                                        class="bi bi-pencil-square"></i> Editar</a>
                                <a href="/dltAluno/<%= Aluno._id %>" class="btn btn-sm btn-outline-danger"><i
                                        class="bi bi-trash-fill"></i> Deletar</a>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
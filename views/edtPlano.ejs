<!-- FILE: editarPlano.ejs -->
<!DOCTYPE html>
<html lang="pt-br" data-bs-theme="dark">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Plano</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary border-bottom">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/"><i class="bi bi-barbell"></i> GymManager</a>
        </div>
    </nav>
    <main class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card border-secondary">
                    <div class="card-header">
                        <h1 class="h4 mb-0">Editar Plano</h1>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div class="mb-3">
                                <label for="Codigo" class="form-label">Código</label>
                                <input type="text" id="Codigo" name="Codigo" class="form-control" readonly
                                    value="<%= Plano._id %>">
                            </div>
                            <div class="mb-3">
                                <label for="Nome" class="form-label">Nome do Plano</label>
                                <input type="text" id="Nome" name="Nome" class="form-control" required
                                    value="<%= Plano.Nome %>">
                            </div>
                            <div class="mb-3">
                                <label for="Descricao" class="form-label">Descrição</label>
                                <input type="text" id="Descricao" name="Descricao" class="form-control"
                                    value="<%= Plano.Descricao %>">
                            </div>
                            <div class="mb-3">
                                <label for="Preco" class="form-label">Preço (R$)</label>
                                <input type="number" step="0.01" id="Preco" name="Preco" class="form-control" required
                                    value="<%= Plano.Preco %>">
                            </div>
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-warning fw-bold">Salvar Alterações</button>
                                <a href="/lstPlano" class="btn btn-secondary">Voltar para a Lista</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>